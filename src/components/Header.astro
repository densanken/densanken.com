---
import { Image } from "astro:assets";

import HamburgerMenu from "./HamburgerMenu";
import circleLogo from "../assets/circle-logo.png";

const menuItems = [
  { label: "ホーム", href: "/" },
  { label: "活動内容", href: "/activities" },
  { label: "作品紹介", href: "/works" },
  { label: "お知らせ", href: "/news" },
  { label: "blog", href: "/blog" },
  { label: "お問い合わせ", href: "/contact" },
];
---

<header class="sticky top-0 z-10 flex items-center justify-between gap-4 border-b border-zinc-200 bg-white px-5 py-3">
  <div class="flex items-center gap-2">
    <span
      aria-hidden="true"
      class="inline-flex h-11 w-11 items-center justify-center overflow-hidden rounded-md border border-zinc-300 bg-white"
    >
      <Image
        src={circleLogo}
        alt="circle logo"
        width={44}
        height={44}
        densities={[1, 2]}
        class="h-full w-full object-contain p-0.5"
      />
    </span>
    <span class="text-base font-bold tracking-[0.04em] text-zinc-900">CCS</span>
  </div>

  <HamburgerMenu menuItems={menuItems} client:load />

  <nav class="hidden md:block" aria-label="グローバルメニュー">
    <ul class="flex items-center gap-1">
      {
        menuItems.map((item) => (
          <li>
            <a href={item.href} class="block rounded-lg px-3 py-2 text-sm text-zinc-800 hover:bg-zinc-100">
              {item.label}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>
</header>
