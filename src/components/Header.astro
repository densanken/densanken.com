---
import { Image } from "astro:assets";

import DesktopMenu from "./DesktopMenu.astro";
import HamburgerMenu from "./HamburgerMenu";
import { HEADER_MENU_ITEMS, HEADER_TITLE } from "./headerMenuItems";
import circleLogo from "../assets/circle-logo.png";
---

<header class="sticky top-0 z-10 border-b border-zinc-200 bg-white">
  <div class="flex h-12 items-center justify-between pr-3">
    <div class="flex h-full min-w-0 items-stretch gap-3">
      <a
        href="https://densanken.com"
        aria-label="densanken.comへ移動"
        class="inline-flex h-full shrink-0 items-stretch"
      >
        <Image src={circleLogo} alt="circle logo" densities={[1, 2]} class="block h-full w-auto" />
      </a>
      <span class="flex min-w-0 items-center truncate text-base font-medium text-zinc-800">{HEADER_TITLE}</span>
    </div>

    <div class="flex shrink-0 items-center">
      <HamburgerMenu menuItems={HEADER_MENU_ITEMS} client:load />
      <DesktopMenu items={HEADER_MENU_ITEMS} />
    </div>
  </div>
</header>
