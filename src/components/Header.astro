---
import { Image } from "astro:assets";

import DesktopMenu from "./DesktopMenu.astro";
import HamburgerMenu from "./HamburgerMenu";
import { HEADER_MENU_ITEMS, HEADER_TITLE } from "./headerMenuItems";
import circleLogo from "../assets/circle-logo.png";
---

<header class="sticky top-0 z-10 flex items-stretch border-b border-zinc-200 bg-white [--header-height:3rem]">
  <div class="z-10 flex shrink-0 items-center justify-start">
    <a href="https://densanken.com" aria-label="densanken.comへ移動" class="inline-flex shrink-0 items-center">
      <Image src={circleLogo} alt="circle logo" densities={[1, 2]} class="block h-12 w-auto" />
    </a>
  </div>

  <div class="flex min-w-0 flex-1 items-center pl-3">
    <span class="truncate text-[1.15rem] font-extralight text-black">{HEADER_TITLE}</span>
  </div>

  <div class="absolute inset-y-0 right-0 z-10 flex items-center py-2 pr-3">
    <HamburgerMenu menuItems={HEADER_MENU_ITEMS} client:load />
    <DesktopMenu items={HEADER_MENU_ITEMS} />
  </div>
</header>
